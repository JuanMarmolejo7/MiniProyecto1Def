<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@CSS/StyleMenu.css, @CSS/StyleGame.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.escriturarapida.controller.LostController">
   <children>
      <ImageView fitHeight="442.0" fitWidth="606.0" layoutX="-2.0" layoutY="-12.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Images/Lost.png" />
         </image>
      </ImageView>
      <Button fx:id="menuButton" layoutX="86.0" layoutY="339.0" mnemonicParsing="false" onAction="#onMenuClick" prefHeight="54.0" prefWidth="88.0" styleClass="btn-menu" stylesheets="CSS/StyleGame.css" text="Menu">
         <font>
            <Font name="VT323 Regular" size="24.0" />
         </font>
      </Button>
      <Button fx:id="retryButton" layoutX="409.0" layoutY="339.0" mnemonicParsing="false" onAction="#onRetryClick" prefHeight="54.0" prefWidth="88.0" styleClass="btn-retry" stylesheets="CSS/StyleGame.css" text="Retry">
         <font>
            <Font name="VT323 Regular" size="16.0" />
         </font>
      </Button>
      <Button fx:id="statsButton" layoutX="261.0" layoutY="337.0" mnemonicParsing="false" onAction="#onStatsClick" prefHeight="54.0" prefWidth="88.0" styleClass="btn-stats" stylesheets="CSS/StyleGame.css" text="Stats">
         <font>
            <Font name="VT323 Regular" size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
